{
  "name": "@fingermenu/backend",
  "version": "0.0.15",
  "description": "Finger Menu Backend",
  "main": "dist/index.js",
  "scripts": {
    "start": "babel-node src/index.js",
    "start:watch": "nodemon --exec npm start",
    "build": "babel src --out-dir dist",
    "lint": "eslint --ext .jsx --ext .js src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow",
    "precommit": "lint-staged"
  },
  "author": "FingerMenu ltd<fingermenu.ltd@gmail.com>",
  "homepage": "https://bitbucket.org/fingermenu/finger-menu-backend#readme",
  "dependencies": {
    "@fingermenu/backend-graphql": "0.0.62",
    "@fingermenu/parse-server-common": "0.0.33",
    "@microbusiness/parse-server-backend": "^1.1.4",
    "@microbusiness/parse-server-common": "^1.1.21",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "0.11.7",
    "immutable": "^4.0.0-rc.9"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "flow-bin": "^0.64.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.14.11",
    "prettier": "^1.10.2",
    "uuid": "^3.2.1"
  },
  "jest": {
    "rootDir": "./src"
  },
  "pre-commit": "lint:staged",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/fingermenu/finger-menu-backend.git"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  }
}
